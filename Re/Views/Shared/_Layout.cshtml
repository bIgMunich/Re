<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/js")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="main">
        <!--头部开始-->
        @Html.Partial("_top");
        <!--头部结束-->
        <!--中间开始-->
        <!--菜单栏开始-->
        <div id="left">
            @Html.Partial("_menu");
        </div>
        <!--菜单栏结束-->
        <!--正文开始-->
        <div id="right">
            @RenderBody()
        </div>
        <!--正文结束-->
        <!--中间结束-->
        <!--尾部开始-->
        <div id="bootom">
            this is bottom---------this is bottom
        </div>
        <!--尾部结束-->
    </div>
    @RenderSection("scripts", required: false)

</body>
</html>




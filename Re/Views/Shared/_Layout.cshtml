<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/js")
    @Styles.Render("~/Content/css")
</head>
<body>
<div class="main">
    <!--头部开始-->
    <div id="top">
        <div class="systemTitle">XXXXXXXXXXXX</div>
        <div class="systemMenu">

            <div class="headImg">
                <img src="/Images/exit.png" title="logout"/>
            </div>
            <div class="headImg">
                <img src="/Images/set-10.png" title="setting"/>
            </div>
            <div class="headImg">
                <img src="/Images/head.jpg" title="head"/>
            </div>
            <div class="headWord">
                @Html.Raw("你好," + Session["UserName"] + "(" + Session["RoleName"] + ")")
            </div>
        </div>
    </div>
    <!--头部结束-->
    <!--中间开始-->
    <!--菜单栏开始-->
    <div id="left">
        @Html.Partial("_menu");
    </div>
    <!--菜单栏结束-->
    <!--正文开始-->
    <div id="right">
        @RenderBody()
    </div>
    <!--正文结束-->
    <!--中间结束-->
    <!--尾部开始-->
    <div id="bootom">
        this is bottom---------this is bottom
    </div>
    <!--尾部结束-->
</div>
@RenderSection("scripts", required: false)

</body>
</html>

<script type="text/javascript">
    $(".headImg").click(function() {
        if (confirm("确定退出系统？")) {
            window.location.href = "/Login/LogOut";
        }
    });
</script>

